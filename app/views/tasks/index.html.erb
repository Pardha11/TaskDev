<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
      <% if task.status == 'pending' %>
        <%= link_to "Mark as Done", mark_as_done_task_path(task), method: :patch %>
      <% else %>
        <%= link_to "Mark as Pending", mark_as_pending_task_path(task), method: :patch %>
      <% end %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
<%= link_to "Back to Home", root_path %>
