      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <form>
    <div class="mb-3">
      <label class="form-label">Title</label>
      <%= form.text_field :title,class:"form-control", style: "width: 300px;" %>
    </div>

    <div class="mb-3">
      <label class="form-label">Payout Amount</label>
      <%= form.number_field :price,class:"form-control",style: "width: 80px;"%>
    </div>

    <div class="mb-3">
      <label class="form-label">Short Description of the project</label>
      <%= form.text_field :short_description,class:"form-control"%>
    </div>

    <div class="mb-3 mw-10">
      <label class="form-label">Long Description</label>
      <%= form.text_field :long_description,class:"form-control",  style: "height: 200px;"%>
    </div>

    <div class="mb-3">
      <label class="form-label">Tech stack</label>
      <%= form.text_field :tech,class:"form-control" %>
    </div>

    <%= form.submit class:"btn btn-primary"%>
  </form>
<% end %>
